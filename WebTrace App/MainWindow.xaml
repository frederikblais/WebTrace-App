<Window x:Name="Web_Trace_App___Frederik_Blais" x:Class="WebTrace_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebTrace_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="533" Opacity="0.98" Background="#FF232323" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="getRouteButton" Content="Get Route" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="40" Click="getRouteButton_Click" Background="#FF232323" Foreground="White"/>
        <TextBox x:Name="sendTextBox" HorizontalAlignment="Left" Height="40" Margin="115,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" FontSize="20" Background="#FF232323" Foreground="White" Grid.ColumnSpan="2"/>
        <ListBox x:Name="addressList" HorizontalAlignment="Left" Height="354" Margin="10,55,0,0" VerticalAlignment="Top" Width="505" Background="#FF232323" Foreground="White" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
